
@{
    ViewBag.Title = "Designations";
    Layout = "~/Areas/Shared/Views/_Layout.cshtml";
    ViewBag.User = Model.EmployeeUser.Fullname;
}

@section Scripts{
    <script src="~/Content/js/human-capital/employees/designations.js"></script>
    <script src="~/Content/lib/datatable/jquery.dataTables.js"></script>
    <script src="~/Content/lib/datatable/dataTables.bootstrap4.js"></script>

}

@model Web.Areas.HumanCapital.Data.HumanCapitalViewModel

@section Styles{
    <link href="~/Content/css/locations/common.css" rel="stylesheet" />
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-6 text-left">
                <button id="btn-back" class="btn btn-sm btn-primary"><i class="fa fa-arrow-circle-left"></i> @Model.Employee.Fullname - Designations</button>
            </div>
            <div class="col-6">
                <button id="btn-add" class="btn btn-sm btn-primary fa-pull-right"><i class="fa fa-plus"></i> Add Designation</button>
                <input type="hidden" id="fld-permission-delete" value="@Model.DeletePermission" />
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <small>
                <table class="table table-bordered" id="tbl-list" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Supervisor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var ctr = 0;
                            foreach (var a in Model.EmployeePositions) {
                                ctr++;
                                <tr>
                                    <td class="text-center w-5">@ctr</td>
                                    <td>
                                        @a.DepartmentName
                                    </td>
                                    <td>
                                        @a.PositionName
                                    </td>
                                    <td>
                                        @{
                                            if (a.StartDate == null) {
                                                <span>&nbsp;</span>
                                            } else {
                                                <span>@a.StartDate.ToShortDateString()</span>
                                            };
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (!a.EndDate.HasValue) {
                                                <span>&nbsp;</span>
                                            }
                                            else {
                                                <span>@a.EndDate.Value.ToShortDateString()</span>
                                            };
                                        }
                                    </td>
                                    <td>
                                        @a.ReportingToEmployeeFullName
                                    </td>
                                    <td class="w-10 text-center">
                                        <div class="btn-group" role="group">
                                            <a href="javascript:void(0);" class="btn btn-secondary btn-edit" data-id="@a.Id" title="Edit"><i class="fa fa-edit"></i></a>
                                            <a href="javascript:void(0);" class="btn btn-danger btn-delete" data-id="@a.Id" title="Delete"><i class="fa fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        }

                    </tbody>

                </table>
            </small>
        </div>
    </div>
</div>

<div class="modal fade" id="mdl-new" tabindex="-1" role="dialog" aria-labelledby="mdl-new" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content f12">
            <div class="modal-header">
                <h5 class="modal-title">New Designation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bdy-new">
                <input type="hidden" id="fld-new-employee-id" name="EmployeeId" data-required="true" value="@Model.Employee.Id" />
                <input type="hidden" id="fld-new-employee-name" name="EmployeeName" data-required="true" value="@Model.Employee.Fullname" />
                <div class="row no-gutters">
                    <div class="col-12">
                        <label>Current?</label>
                        <select class="fld-position-states form-control">
                            <option value="">-</option>
                            <option value="1">No</option>
                            <option value="0">Yes</option>
                        </select>
                        <input type="hidden" id="fld-selected-position-state"  />

                        <label>Department</label>
                        <select class="fld-departments form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-department-id" name="DepartmentId" data-required="true" />
                        <input type="hidden" id="fld-department-name" name="DepartmentName" data-required="true" />

                        <label>Designation</label>
                        <select class="fld-positions form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-position-id" name="PositionId" data-required="true" />
                        <input type="hidden" id="fld-position-name" name="PositionName" data-required="true" />

                        <label>Supervisor</label>
                        <select class="fld-employees form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-supervisor-id" name="ReportingTo"  />
                        <input type="hidden" id="fld-supervisor-name" name="ReportingToEmployeeFullName"  />

                        <label>Start Date</label>
                        <input type="text" class="form-control fld-date fld-start-date" name="StartDate" data-required="true" placeholder="-" />

                        <label>End Date</label>
                        <input type="text" class="form-control fld-date fld-end-date" name="EndDate" placeholder="-" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btn-new-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btn-new-save" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdl-edit" tabindex="-1" role="dialog" aria-labelledby="mdl-edit" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content f12">
            <div class="modal-header">
                <h5 class="modal-title">Update Designation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bdy-edit">
                <input type="hidden" id="fld-edit-id" name="Id" data-required="true" />
                <input type="hidden" id="fld-edit-employee-id" name="EmployeeId" data-required="true" value="@Model.Employee.Id" />
                <input type="hidden" id="fld-edit-employee-name" name="EmployeeName" data-required="true" value="@Model.Employee.Fullname" />
                <div class="row no-gutters">
                    <div class="col-12">
                        <label>Current?</label>
                        <select class="fld-edit-position-states form-control">
                            <option value="">-</option>
                            <option value="1">No</option>
                            <option value="0">Yes</option>
                        </select>
                        <input type="hidden" id="fld-edit-selected-position-state" />

                        <label>Department</label>
                        <select class="fld-edit-departments form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-edit-department-id" name="DepartmentId" data-required="true" />
                        <input type="hidden" id="fld-edit-department-name" name="DepartmentName" data-required="true" />

                        <label>Designation</label>
                        <select class="fld-edit-positions form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-edit-position-id" name="PositionId" data-required="true" />
                        <input type="hidden" id="fld-edit-position-name" name="PositionName" data-required="true" />

                        <label>Supervisor</label>
                        <select class="fld-edit-employees form-control" placeholder="-"></select>
                        <input type="hidden" id="fld-edit-supervisor-id" name="ReportingTo" />
                        <input type="hidden" id="fld-edit-supervisor-name" name="ReportingToEmployeeFullName" />

                        <label>Start Date</label>
                        <input type="text" class="form-control fld-date fld-edit-start-date" name="StartDate" data-required="true" placeholder="-" />

                        <label>End Date</label>
                        <input type="text" class="form-control fld-date fld-edit-end-date" name="EndDate" placeholder="-" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btn-edit-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btn-edit-save" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdl-permission" tabindex="-1" role="dialog" aria-labelledby="mdl-permission" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bdy-action">
                <p class="p-message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-alert-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

