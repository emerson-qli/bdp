
@{
    ViewBag.Title = "Main Dashboard";
    Layout = "~/Areas/Shared/Views/_Layout.cshtml";
    ViewBag.User = Model.Employee.Fullname;
}

@model Web.Areas.RiskManagement.Data.RiskManagementViewModel

@section scripts {
    <script src="~/Content/js/risk-management/dashboard/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
    </a>
</div>

<div class="row">
    <div class="col-6 mb-4 ">
        <div class="card shadow h-100 py-2">
            <div class="card-body">
                <div class="row">
                    <div class="col align-middle">
                        <i class="fas fa-exclamation-triangle text-danger fa-2x float-left pr-2" style="color: #6B02D2"></i>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Audit
                        </div>
                    </div>
                    <div class="col"></div>
                    <div class="col border mr-3">
                        <div class="text-gray-800 h5 mb-0 font-weight-bold pl-1">1</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Open
                        </div>
                    </div>
                    <div class="col border">
                        <div class="text-gray-800 h5 mb-0 font-weight-bold pl-1">3</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Close
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 mb-4 ">
        <div class="card shadow h-100 py-2">
            <div class="card-body">
                <div class="row">
                    <div class="col align-middle">
                        <i class="fas fa-exchange-alt fa-2x float-left pr-2" style="color: #6B02D2"></i>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Audit
                        </div>
                    </div>
                    <div class="col"></div>
                    <div class="col border mr-3">
                        <div class="text-gray-800 h5 mb-0 font-weight-bold pl-1">2</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Open
                        </div>
                    </div>
                    <div class="col border">
                        <div class="text-gray-800 h5 mb-0 font-weight-bold pl-1">3</div>
                        <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">
                            Close
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row no-gutters align-items-center">
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>