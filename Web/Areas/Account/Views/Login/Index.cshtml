@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Shared/Views/_LayoutLogin.cshtml";
    var version = typeof(Web.MvcApplication).Assembly.GetName().Version;
}

@section Scripts{
    <script src="~/Content/js/account/index.js"></script>

    <script src="~/Content/js/account/main.js"></script>
    <script src="~/Content/js/account/popper.min.js"></script>
}

@section Styles{
    <link href="~/Content/css/account/index.css" rel="stylesheet">

    <link href="~/Content/css/account/font-icomoon-style.css" rel="stylesheet">
    <link href="~/Content/css/account/index-style.css" rel="stylesheet">
    <link href="~/Content/css/account/owl.carousel.min.css" rel="stylesheet">
}

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2 bgm" id="dv-bg-1">
    </div>
    <div class="bg order-1 order-md-2 bgm-2" id="dv-bg-2">
    </div>

    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 f12">
                    <div class="col-12 text-center pt-4 pb-2">
                        <img src="~/Content/img/build-and-dox-official-logo2.png" />
                    </div>
                    <div class="form-group first">
                        <label for="username">Username</label>
                        <input type="email" class="form-control form-control-user" style="font-size: 12px;" id="fld-email" name="Email" aria-describedby="emailHelp" placeholder="">
                    </div>
                    <div class="form-group last mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control form-control-user" id="fld-password" name="Password" placeholder="">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block btn-login">Login</button>

                    <span class="my-auto pt-2"><small>Powered by Build and Dox.</small></span> <br />
                    <span class="spn-version">@version</span>

                </div>
            </div>
        </div>
    </div>
</div>

